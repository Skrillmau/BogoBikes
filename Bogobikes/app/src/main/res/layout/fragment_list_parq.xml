<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListParq">


    <ImageView
        android:id="@+id/listap"
        android:layout_width="231dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/listaparq" />


    <Button
        android:id="@+id/btn_unicentro"
        android:layout_width="342dp"
        android:layout_height="60dp"
        android:layout_below="@id/btn_portal2"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/unicentro" />

    <Button
        android:id="@+id/btn_portal1"
        android:layout_width="342dp"
        android:layout_height="60dp"
        android:layout_below="@id/listap"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/pnorte1" />

    <Button
        android:id="@+id/btn_portal2"
        android:layout_width="342dp"
        android:layout_height="60dp"
        android:layout_below="@id/btn_portal1"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/pnorte2" />


</RelativeLayout>