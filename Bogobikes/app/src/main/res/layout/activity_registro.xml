<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">


    <ImageView
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/fondo"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_below="@id/fondo"
        android:layout_marginTop="-130dp"
        android:src="@drawable/logo"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/registrarse"
        android:layout_width="115dp"
        android:layout_height="20dp"
        android:layout_below="@+id/logo"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/reg" />

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@+id/registrarse"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/nombre"
        android:hint="Nombre"
        android:inputType="text"
        android:paddingLeft="15dp" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtNombre"
        android:layout_centerInParent="true"
        android:background="@drawable/email"
        android:hint="EMail"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp" />

    <EditText
        android:id="@+id/txtCedula"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtEmail"
        android:layout_centerInParent="true"
        android:background="@drawable/cedula"
        android:hint="Cédula"
        android:inputType="number"
        android:paddingLeft="15dp" />

    <EditText
        android:id="@+id/txtPass"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtCedula"
        android:layout_centerInParent="true"
        android:background="@drawable/contrasena2"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:paddingLeft="15dp" />

    <Button
        android:id="@+id/btnReg"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtPass"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/regboton" />


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_below="@+id/btnReg"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/haveacc" />

</RelativeLayout>
